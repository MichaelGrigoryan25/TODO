<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/index.css">
    <%- include ("./partials/bootstrap.css.ejs") %>
    <title>TODO</title>
</head>

<body onload="onLoad()">

    <div class="container">
        
        <div class="form-container">
            <h1>TODO</h1>
            <form id="form" action="/create" method="POST">
                <div class="form-group">
                  <input type="text" class="form-control" id="createTask" aria-describedby="createTask" name="createTask" placeholder="Add a task to do..." required>
                </div>
                <button type="submit" class="btn btn-outline-success">Add</button>
            </form>
        </div>


        <div class="task-container">
            <% tasks.forEach(task => { %>
                <div class="task">
                    <hr class="solid">
                    <h4><%= task.taskName %></h4>
                    <form action="/delete/<%= task._id %>" method="POST">
                        <button class="btn btn-outline-danger btn-sm" type="submit">Delete</button>
                    </form>
                </div>
            <% }) %>
        </div>

    </div>

    <%- include ("./partials/bootstrap.js.ejs") %>
    <script src="js/script.js"></script>
</body>

</html>